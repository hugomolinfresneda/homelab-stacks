COMPOSE_PROJECT_NAME=<COMPOSE_PROJECT_NAME>
TZ=<REGION/CITY>

# UID/GID for Nextcloud containers (cron user)
PUID=<PUID>
PGID=<PGID>

# Public domain (for trusted domains)
# compose.yaml passes only ${NC_DOMAIN} by default.
# - If you need multiple trusted domains, either:
#   (a) configure them in Nextcloud after install, OR
#   (b) update compose to pass NEXTCLOUD_TRUSTED_DOMAINS through (follow-up PR; out of scope here).
NC_DOMAIN=<NC_DOMAIN>
NEXTCLOUD_TRUSTED_DOMAINS=${NC_DOMAIN}

# DB
NC_DB_NAME=<NC_DB_NAME>
NC_DB_USER=<NC_DB_USER>
NC_DB_PASS=<NC_DB_PASS>
NC_DB_ROOT=<NC_DB_ROOT>

# Nextcloud admin bootstrap
NC_ADMIN_USER=<NC_ADMIN_USER>
NC_ADMIN_PASS=<NC_ADMIN_PASS>

# Keep both sets to satisfy CLI/bootstrap paths (MySQL/MariaDB vars)
MYSQL_DATABASE=${NC_DB_NAME}
MYSQL_USER=${NC_DB_USER}
MYSQL_PASSWORD=${NC_DB_PASS}
# compose.yaml hard-sets MYSQL_HOST to the internal DB service name `db`.
# If you want an external DB host, you must also change compose to use ${MYSQL_HOST} (follow-up PR; out of scope here).
MYSQL_HOST=db

# PHP
PHP_MEMORY_LIMIT=<PHP_MEMORY_LIMIT>
PHP_UPLOAD_LIMIT=<PHP_UPLOAD_LIMIT>

# ---- Optional: local bind for local web access (runtime-override only) ----
# BIND_LOCALHOST=<BIND_LOCALHOST>
# HTTP_PORT=<HTTP_PORT>
