COMPOSE_PROJECT_NAME=nextcloud
TZ=Europe/Madrid

# Public domain (for trusted domains)
NC_DOMAIN=cloud.example.tld
NEXTCLOUD_TRUSTED_DOMAINS=${NC_DOMAIN} nc-web localhost

# DB
NC_DB_NAME=nextcloud
NC_DB_USER=ncuser
NC_DB_PASS=change-me
NC_DB_ROOT=change-me-too

# Nextcloud admin bootstrap
NC_ADMIN_USER=admin
NC_ADMIN_PASS=change-me

# Keep both sets to satisfy CLI/bootstrap paths
MYSQL_DATABASE=${NC_DB_NAME}
MYSQL_USER=${NC_DB_USER}
MYSQL_PASSWORD=${NC_DB_PASS}
MYSQL_HOST=db

# PHP
PHP_MEMORY_LIMIT=1024M
PHP_UPLOAD_LIMIT=2G
# Runtime-only web bind
BIND_LOCALHOST=127.0.0.1
HTTP_PORT=8082
