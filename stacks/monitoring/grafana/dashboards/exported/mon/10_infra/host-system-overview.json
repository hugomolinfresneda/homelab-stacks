      "targets": [
        {
          "editorMode": "code",
          "expr": "max by (mountpoint) (\n  100 * (1 - (\n    node_filesystem_avail_bytes{\n      job=\"node\",\n      fstype=~\"ext4|xfs|btrfs\",\n      mountpoint=~\"^/$|^${backups_mountpoint:raw}$\"\n    }\n    /\n    node_filesystem_size_bytes{\n      job=\"node\",\n      fstype=~\"ext4|xfs|btrfs\",\n      mountpoint=~\"^/$|^${backups_mountpoint:raw}$\"\n    }\n  ))\n)",
          "legendFormat": "__auto",
          "range": true,
          "refId": "A"
        }
