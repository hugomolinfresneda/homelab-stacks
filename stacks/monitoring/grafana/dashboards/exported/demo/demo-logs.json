{
  "uid": "demo-logs",
  "title": "Demo â€” Logs (Loki)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "container",
        "type": "query",
        "label": "Container",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "query": "label_values({job=\"dockerlogs\"}, container)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Log rate by container (lines/s)",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (container) (rate({job=\"dockerlogs\", container=~\"$container\"}[$__interval]))",
          "legendFormat": "{{container}}",
          "range": true
        }
      ]
    },
    {
      "type": "logs",
      "title": "Logs",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 14
      },
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"dockerlogs\", container=~\"$container\"}"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "showTime": true,
        "wrapLogMessage": true
      }
    }
  ]
}
